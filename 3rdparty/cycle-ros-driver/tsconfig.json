{
  "compilerOptions": {
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["dom", "es5", "scripthost", "es2015.collection"]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  }
}
